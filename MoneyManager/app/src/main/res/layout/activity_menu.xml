<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context="com.example.alandevasia.moneymanager.activityMenu">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/orange"
        android:fontFamily="serif"
        android:text="Money Manager" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:layout_marginTop="35dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/incomebtn"
        android:background="@color/btnclr"
        android:text="Income" />

    <Button
        android:id="@+id/expensebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/btnclr"

        android:text="Expense" />

    <Button
        android:id="@+id/btnincexp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btnclr"

        android:layout_marginTop="10dp"
        android:text="Checkout" />

    <Button
        android:id="@+id/showCalculatorButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/btnclr"

        android:text="Calculator" />

    <Button
        android:id="@+id/calendarbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:background="@color/btnclr"

        android:text="Calendar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"

        android:textAlignment="center"
        android:textColor="@color/yellow"
        android:text="\u00a9 Alan Devasia" />


</LinearLayout>
